//-
    Main website structure

doctype html

html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="theme-color" content="#1e2327")

        //CSS Files
        block css
            link(rel="stylesheet" type="text/css" href="/client/css/font-awesome.min.css")
            link(rel="stylesheet" type="text/css" href="/client/css/main.css")
            link(rel="stylesheet" type="text/css" href="/client/css/audio-player.css")

        //JS Files
        block scripts
            script(src="/client/js/external_scripts/jquery-3.2.1.min.js" type="text/javascript")
            script(src='/client/js/external_scripts/prefixfree-1.0.7.min.js' type="text/javascript")
            script(src='/client/js/external_scripts/html5media-1.1.8.min.js' type="text/javascript")

            script(src="/client/js/globals.js" type="text/javascript")
            script(src='/client/js/audio-player.js' type="text/javascript")

    body
        //Sidebar
        div(id="sidebar")
            div(id="playlist-wrap")
                h2 Playlist
                table(id="playlist")

            div(id="player")
                div(id="player-cover")
                    div(id="playerSongNameLabel")
                    div(id="playerArtistNameLabel")

                div(class="player-controls")
                    ul(class="controls controls-main")
                        li: button(id="btnBack" class="control" type="button" title="Back" aria-label="Back"): i(class="fa fa-step-backward" style="color:#cc2b00")
                        li: button(id="btnPlayPause" class="control" type="button" title="Play" aria-label="Play"): i(class="fa fa-play fa-2x" style="color:#cc2b00")
                        li: button(id="btnNext" class="control" type="button" title="Next" aria-label="Next"): i(class="fa fa-step-forward" style="color:#cc2b00")

                    ul(class="controls controls-options")
                        li: button(class="control" type="button" disabled="" title="Mute" aria-label="Mute"): i(class="fa fa-volume-off" style="color:#cc2b00")
                        li: button(class="control" type="button" disabled="" title="Repeat all tracks in playlist" aria-label="Repeat all tracks in playlist"): i(class="fa fa-retweet" style="color:#cc2b00")
                        li: button(class="control" type="button" disabled="" title="Turn on shuffle" aria-label="Turn on shuffle"): i(class="fa fa-random" style="color:#cc2b00")
                        li: button(class="control" type="button" disabled="" title="Playlist" aria-label="Playlist"): i(class="fa fa-list-alt" style="color:#cc2b00")

        //Main content of website
        div(id="content-wrapper")
            header: h1 Hometify

            div(id="main-content")

        //HTML5 Audio
        audio(id="audioElement" preload='', controls='' hidden)