extends default-layout

block append scripts
    script(src="/client/js/album-submit-form.js")

block append content
    form(action="/new/album" method="post")
        input(id="artist-name-field" name="artist_name" placeholder="Name of the artist")
        input(id="album-name-field" name="album_name" placeholder="Name of the album")
        input(id="album-year-field" name="album_year" type="number" placeholder="Album year")
        input(id="submit-btn" type="submit")
